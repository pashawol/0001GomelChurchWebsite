mixin card-caption(t='Божественная литургия в четверг Светлой седмицы', p='Божественную литургию в четверг Светлой седмицы, в 8-ю годовщину со дня преставления архиепископа Аристарха 23 апреля 2020 года в Никольском...',sm, color)
	+e.caption
		if !sm
			+e.title.h3 
				a(href="#").text-body= t
		else
			+e.title
				a(href="#").text-body= t
		+e.label.text-secondary 
			+e.label-item Сегодня, 13:04
			+e.label-item 38 просмотров
		if !sm
			+e.text= p
mixin itemCaption(t,p)
	+b.card
		+e.caption 
			+e.title
				a(href="#")= t
			+e.label.text-secondary 
				+e.label-item Сегодня, 13:04
				+e.label-item 38 просмотров
			+e.text.text-secondary!= p
			if block
				block
			else
				.text-right.pt-3
					a(href="#").strong Подробнее
mixin cardImgwrap(i)
	+e.img-wrap.bg-wrap(href="#")
		+pic(i,"bg",'lazy',0)(class="picture-bg")

mixin card-hor(i, t,p)
	+b.card--horizontal
		+cardImgwrap(i)
		+card-caption(t)
mixin card(i, t,p)
	+b.card
		+cardImgwrap(i)
		+card-caption(t, p)
mixin cardNews(i, t,p)
	+b.card
		+cardImgwrap(i)
		+card-caption(t, p,'sm')

